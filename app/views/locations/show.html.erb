<h1><%= @location.title %></h1>

<h4><%= @owner %></h4>
<h3><%= @location.address %></h3>
<% categories = @location.category.split(',') %>
<% categories.each do |category| %>
  <%= category %>
<% end %>

<p>
  <%= link_to locations_path() do %>
    <i class="fa-solid fa-map-location-dot"></i>
  <% end %>
</p>
