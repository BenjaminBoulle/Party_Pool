<h1 class="h1">Locations</h1>
<div class="all_locations">
  <% @locations.each do |location| %>
    <div class="location">
      <div class= "link_location">
      <%= link_to location.title, location_path(location), class:"putaindelink" %>
      </div>
      <div>
      <%= cl_image_tag location.photo.key, height: 240, width: 290, crop: :fill %>
      </div>
    </div>
  <% end %>
<div class="add_location">
<%= link_to new_location_path() do %>
  Add Location
  <i class="fa-solid fa-plus"></i>
<% end %>

</div>
</div>
<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
