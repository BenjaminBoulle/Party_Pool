<h1>Locations</h1>
<% @locations.each do |location| %>
  <div>
    <%= link_to location.title, location_path(location) %>
    <p> Owner : <%= location.user.first_name %> <%=  location.user.last_name%> </p>
  </div>
<% end %>

<%= link_to new_location_path() do %>
  Add Location
  <i class="fa-solid fa-plus"></i>
<% end %>
