<h1>My Locations</h1>
<% @locations.each do |location| %>
  <div>
    <%= link_to location.title, location_path(location) %>
    <p> Owner :<%= location.user.email.split('@').first %> </p>
  </div>
<% end %>

<%= link_to new_location_path() do %>
  Add Location
  <i class="fa-solid fa-plus"></i>
<% end %>
